                                        <Style TargetType="{x:Type TreeViewItem}">
                                            <Style.Resources>
                                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF3399FF"/>
                                            </Style.Resources>
                                        </Style>
                                    </Style.Resources>
                                </Style>
                            </TreeView.Resources>
                        </TreeView>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

